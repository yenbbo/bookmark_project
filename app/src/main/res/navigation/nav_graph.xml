<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.book_project.SearchFragment"
        tools:layout="@layout/fragment_search">
        <!-- SearchFragment와 BookPageFragment를 연결하는 action 추가 -->
        <action
            android:id="@+id/action_searchFragment_to_bookPageFragment"
            app:destination="@id/bookPageFragment">
            <argument
                android:name="book"
                app:argType="com.example.book_project.model.Book" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/bookPageFragment"
        android:name="com.example.book_project.BookPageFragment"
        tool:layout="@layout/fragment_book_page">
        <argument
            android:name="book"
            app:argType="com.example.book_project.model.Book" />
    </fragment>

</navigation>